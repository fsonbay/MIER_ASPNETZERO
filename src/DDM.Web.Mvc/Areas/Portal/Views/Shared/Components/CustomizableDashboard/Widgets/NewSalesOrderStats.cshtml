@using DDM.Web.Resources

@inject IWebResourceManager WebResourceManager
@{ WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Portal/Views/_Bundles/morris.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Portal/Views/_Bundles/raphael.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Portal/Views/_Bundles/jquery.flot.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Portal/Views/_Bundles/jquery.waypoints.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Portal/Views/_Bundles/jquery.counterup.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Portal/Views/_Bundles/topojson.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Portal/Views/_Bundles/jquery.easypiechart.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Portal/Views/_Bundles/chartist.min.js"); }


<div class="card card-custom NewSalesOrderStatsContainer h-100">
    <div class="card-header align-items-center border-0 mt-4">
        <h3 class="card-title align-items-start flex-column">
            <span class="font-weight-bolder text-dark">New Order</span>
        </h3>
    </div>
    <div class="card-body">
        <div id="region_statistics_content">
            <div class="table-responsive">
                <div id="newSalesOrder_statistics_content">
                    <div class="table-responsive">
                        <table class="table table-separate table-head-custom no-footer dtr-inline dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <td class="kt-widget11__label">#</td>
                                    <td class="kt-widget11__app">Customer</td>
                                    <td class="kt-widget11__sales">Order Date</td>
                                    <td class="kt-widget11__change">Deadline</td>

                                </tr>
                            </thead>
                            <tbody>
                                <!-- Rows will be generated dynamically, see initRegionalStats in RegionalStats.js -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
